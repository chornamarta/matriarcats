@using LFC.DAL.Models
@model IEnumerable<Courses>
@{
    ViewData["Title"] = "Перелік курсів";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h3 class="text-primary">Перелік курсів</h3>
        </div>
        <div сlass="col-6 text-end">
            <a asp-controller="Course" asp-action="Create" class="btn btn-outline-primary">
                Створити новий курс
            </a>
        </div>
    </div>
    <br/> <br/>
    @foreach (var item in Model)
    {
        <div class="card text-white bg-primary mb-3">
            <div class="card-header">
                <h5>@item.CourseName</h5>
            </div>
            <div class="card-body">
                <blockquote class="blockquote mb-0">
                    <p>@item.CourseDescription</p>
                    @foreach (var lec in item.Teachers)
                    {
                        <footer class="blockquote-footer text-white">@Html.DisplayFor(l=>lec.TeacherRole) @Html.DisplayFor(l=>lec.FullName)</footer>
                    }
            
                </blockquote>
            </div>
        </div>
    }

</div>

