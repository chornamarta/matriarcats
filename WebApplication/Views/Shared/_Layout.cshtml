<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LNU Free Choice</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LFC.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="text-white bg-primary">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm text-light bg-secondary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="text-light bg-secondary navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">LNU FREE CHOICE</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - matriarcats - <a asp-area="" asp-controller="Home" 
            asp-action="Privacy">Privacy</a> - <a asp-area="" asp-controller="Profile" 
            asp-action="ListStudent">Students</a> - <a asp-area="" asp-controller="Profile" 
            asp-action="MyCourses">My courses</a> - <a asp-area="" asp-controller="Account" 
            asp-action="Register">Реєстрація</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
